<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="android.prsma.org.energyspectrum.mainActivities.HomeActivity$PlaceholderFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/table_item_label"
                    android:layout_weight="0.49"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/current_cons_label"
                    android:text="Daily consumption / Average (kWh)"
                    android:padding="5sp"
                    android:layout_marginBottom="5sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_weight="0.49"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/maximize_chart_day"
                        android:text="Full screen"/>
                    </LinearLayout>
            </LinearLayout>
           <!--     DATES STUFF -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/day_chart_container"
                >
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="0.49"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.prsma.org.energyspectrum.customUI.LineConsumptionChart
                        android:id="@+id/day_consumption_chart"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.8"/>
                    <TextView
                        style="@style/table_item_label"
                        android:layout_width="fill_parent"
                        android:background="@drawable/main_bg2"
                        android:padding="2dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_height="0sp"
                        android:layout_weight="0.1"
                        android:text="Compare with:"
                        android:textColor="#000000"
                        />
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:text="Yesterday"
                                    android:textColor="@color/comp1_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <CheckBox
                                    android:id="@+id/checkbox_1day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:text="29-08-2016"
                                    android:textColor="@color/comp2_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <CheckBox
                                    android:id="@+id/checkbox_2day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:text="28-08-2016"
                                    android:textColor="@color/comp3_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <CheckBox
                                    android:id="@+id/checkbox_3day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:text="27-08-2016"
                                    android:textColor="@color/comp4_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <CheckBox
                                    android:id="@+id/checkbox_4day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:text="26-08-2016"
                                    android:textColor="@color/comp5_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <CheckBox
                                    android:id="@+id/checkbox_5day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                    <!-- check boxes for other consumptions
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                    </LinearLayout>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_margin="10sp"/>

                <LinearLayout
                    android:id="@+id/day_side_bar"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.49"
                    >

                    <!-- TOTAL CONSUMPTION LABEL -->
                    <TextView
                        style="@style/table_item_label"
                        android:layout_width="fill_parent"
                        android:background="@drawable/main_bg2"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="#000000"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/power_icon"/>
                            <TextView
                                android:id="@+id/day_total_kwh"
                                style="@style/table_item_body"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200 kWh"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.33"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/money_icon"/>
                            <TextView
                                style="@style/table_item_body"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10â‚¬"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.33"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/tree_icon"/>
                            <TextView
                                style="@style/table_item_body"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2g CO2"/>
                        </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                    <!-- COMPARISON CONSUMPTION LABEL -->
                    <TextView
                        style="@style/table_item_label"
                        android:layout_width="fill_parent"
                        android:background="@drawable/main_bg2"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="Comparison:"
                        android:textColor="#000000"
                        />
                    <LinearLayout
                        style="@style/table_item_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp">
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 10% than yesterday"/>
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- 5% than your average"/>
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lowest consumption day in a month"/>
                    </LinearLayout>
                    <!-- PEAK CONSUMPTION LABEL -->
                    <TextView
                        style="@style/table_item_label"
                        android:layout_width="fill_parent"
                        android:background="@drawable/main_bg2"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="Peak:"
                        android:textColor="#000000"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp">
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="between 10:00 and 12:00"/>

                    </LinearLayout>

                    <!-- RENEWABLE CONSUMPTION LABEL -->
                    <TextView
                        style="@style/table_item_label"
                        android:layout_width="fill_parent"
                        android:background="@drawable/main_bg2"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:text="Renewable energy:"
                        android:textColor="#000000"
                        />
                    <TextView
                        style="@style/table_item_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20% of renewable"/>
                    <LinearLayout
                        style="@style/table_item_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp">
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5% solar"/>
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10% hydro"/>
                        <TextView
                            style="@style/table_item_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5% wind"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
